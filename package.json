{
  "name": "file-context-sidebar",
  "displayName": "File Context Sidebar",
  "description": "Sidebar that appears on right-click with file information",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:myExtension.openSidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "myExtension.doSomethingWithFile",
        "title": "Do Something with this File"
      },
      {
        "command": "myExtension.openSidebar",
        "title": "Open File Context Sidebar"
      },
      {
        "command": "myExtension.resetEndpoints",
        "title": "Reset API Endpoints to Default"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "myExtension.doSomethingWithFile",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "File Context Sidebar",
      "properties": {
        "fileContextSidebar.apiEndpoints": {
          "type": "array",
          "default": [
            "https://httpbin.org/post",
            "https://jsonplaceholder.typicode.com/posts",
            "http://localhost:3000/api"
          ],
          "description": "List of API endpoints for the dropdown"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "14.x",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}